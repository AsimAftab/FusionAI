{
  "name": "fusionai",
  "version": "1.0.0",
  "description": "FusionAI - Multiple AI Models Access Platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "echo \"No build step required\"",
    "docker:build": "docker build -t fusionai .",
    "docker:run": "docker run -p 3001:3001 --env-file .env fusionai",
    "docker:compose": "docker-compose up -d",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop fusionai",
    "pm2:restart": "pm2 restart fusionai",
    "pm2:logs": "pm2 logs fusionai",
    "clean": "rm -rf uploads/temp/* logs/*.log",
    "health": "curl -f http://localhost:3001/health || exit 1"
  },
  "keywords": ["ai", "gpt-5", "azure", "express"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "express": "^4.18.2",
    "ejs": "^3.1.10",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.5.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-validator": "^7.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
